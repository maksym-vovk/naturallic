include ../../mixins/product-review
include ../../mixins/product-short

-
	var PRODUCT_CARD = LANG.product_card;
	var FERONEX = LANG.feronex;
	var FERONEX_RECOMMENDATION = LANG.feronex.feronex_product_recommendation;
	var REVIEWS = LANG.reviews.reviews_feronex;
	REVIEWS.length = 3;


section.product-item
	.container
		.product-item__breadcrumbs.breadcrumbs
			a.breadcrumbs__link(href="/")!=PRODUCT_CARD.product_card_bread_main
			span.breadcrumbs__line /
			a.breadcrumbs__link(href="catalog.html")!=PRODUCT_CARD.product_card_bread_catalog
			span.breadcrumbs__line /
			a.breadcrumbs__link(href="catalog.html?id=health")!=FERONEX.feronex_category
			span.breadcrumbs__line /
			span.breadcrumbs__main!=FERONEX.feronex_title
		.product-item__wrapper
			.product-item__slider.slider-prod
				.slider-prod__nav.js-slider-product-nav
					.slider-prod__nav-item
						picture
							source(srcset='img/feronex.webp' type='image/webp')
							img(src="img/feronex.png", alt="Feronex")
					.slider-prod__nav-item
						picture
							source(srcset='img/feronex_1.webp' type='image/webp')
							img(src="img/feronex.png", alt="Feronex")
					.slider-prod__nav-item
						picture
							source(srcset='img/feronex_2.webp' type='image/webp')
							img(src="img/feronex.png", alt="Feronex")
				.slider-prod__for.js-slider-product-for
					.slider-prod__for-item
						picture
							source(srcset='img/feronex.webp' type='image/webp')
							img(src="img/feronex.png", alt="Feronex")
					.slider-prod__for-item
						picture
							source(srcset='img/feronex_1.webp' type='image/webp')
							img(src="img/feronex.png", alt="Feronex")
					.slider-prod__for-item
						picture
							source(srcset='img/feronex_2.webp' type='image/webp')
							img(src="img/feronex.png", alt="Feronex")
			.product-item__info
				h2.product-item__name!=FERONEX.feronex_title
				//p.product-item__desc
				.product-item__rating
					.product-item__rating-stars
						img.product-item__rating-star(src="img/svg/star.svg", alt="")
						img.product-item__rating-star(src="img/svg/star.svg", alt="")
						img.product-item__rating-star(src="img/svg/star.svg", alt="")
						img.product-item__rating-star(src="img/svg/star.svg", alt="")
						img.product-item__rating-star(src="img/svg/star-empty-1.svg", alt="")
					p.product-item__rating-text!=FERONEX.feronex_review_count
				ul.product-item__list.product-list
					li.product-list__item
						!=PRODUCT_CARD.product_niche
						!=FERONEX.feronex_niche
					li.product-list__item
						!=PRODUCT_CARD.product_form_factor
						!=FERONEX.feronex_form_factor
				//button.product-item__btn.button.button--green.js-show-frame-popup!=PRODUCT_CARD.product_btn
				a.product-item__btn.button.button--gold(href='order.html?id=feronex')!=PRODUCT_CARD.product_btn
				p.product-item__text!=FERONEX.feronex_short_description
				.product-item__description.js-accordeon
					.specification
						.specification__top.js-btn-accordeon
							h3.specification__ttl!=PRODUCT_CARD.product_description
							i.fico.fico-cross
						p.specification__text.js-info-accordeon!=FERONEX.feronex_description
					.specification
						.specification__top.js-btn-accordeon
							h3.specification__ttl!=PRODUCT_CARD.product_compound
							i.fico.fico-cross
						p.specification__text.js-info-accordeon!=FERONEX.feronex_compound
					.specification
						.specification__top.js-btn-accordeon
							h3.specification__ttl!=PRODUCT_CARD.product_usage
							i.fico.fico-cross
						p.specification__text.js-info-accordeon!=FERONEX.feronex_usage
					.specification
						.specification__top.js-btn-accordeon
							h3.specification__ttl!=PRODUCT_CARD.product_contraindications
							i.fico.fico-cross
						p.specification__text.js-info-accordeon!=FERONEX.feronex_contraindications
					.specification
						.specification__top.js-btn-accordeon
							h3.specification__ttl!=PRODUCT_CARD.product_additional
							i.fico.fico-cross
						.specification__text.js-info-accordeon
							.product-list
								li.product-list__item
									!=PRODUCT_CARD.product_manufacturer
									!=FERONEX.feronex_manufacturer
								li.product-list__item.mb
									!=PRODUCT_CARD.product_suitability
									!=FERONEX.feronex_suitability
								li.product-list__item
									!=PRODUCT_CARD.product_keep
									!=FERONEX.feronex_keep
					.specification
						.specification__top.js-btn-accordeon
							h3.specification__ttl!=PRODUCT_CARD.product_reviews
							i.fico.fico-cross
						.specification__text.js-info-accordeon
							each review in REVIEWS
								+product-review(review)
		.product-item__recomm
			h2.product-item__recomm-ttl.title!= PRODUCT_CARD.product_recommendations
			.product-item__recomm-list
				each product in FERONEX_RECOMMENDATION
					+productShort(product)
