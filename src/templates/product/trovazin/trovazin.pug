include ../../mixins/product-page

-
	var PRODUCT_NAME = 'Trovazin'
	var PRODUCT_CARD = LANG.product_card;
	var CURRENT_PRODUCT = LANG.trovazin;
	var RECOMMENDATIONS = LANG.recommendations.filter(prod => prod.name === 'Delislim' || prod.name === 'Steplex' || prod.name === 'Demyxil')
	var REVIEWS = LANG.reviews.reviews_trovazin;
	REVIEWS.length = 3;

+productPage(PRODUCT_NAME, PRODUCT_CARD, CURRENT_PRODUCT, RECOMMENDATIONS, REVIEWS)