include ../../mixins/product-review
include ../../mixins/product-short
-
	var PRODUCT_CARD = LANG.product_card;
	var VISOPTIC_DAY = LANG.visoptic_day;
	var VISOPTIC_DAY_RECOMMENDATION = LANG.visoptic_day.visoptic_day_product_recommendation;
	var REVIEWS = LANG.reviews.reviews_visoptic_duo_day;
	REVIEWS.length = 3;

section.product-item
	.container
		.product-item__breadcrumbs.breadcrumbs
			a.breadcrumbs__link(href="/")!=PRODUCT_CARD.product_card_bread_main
			span.breadcrumbs__line /
			a.breadcrumbs__link(href="catalog.html")!=PRODUCT_CARD.product_card_bread_catalog
			span.breadcrumbs__line /
			a.breadcrumbs__link(href="catalog.html?id=health")!=VISOPTIC_DAY.visoptic_day_category
			span.breadcrumbs__line /
			span.breadcrumbs__main!=VISOPTIC_DAY.visoptic_day_title
		.product-item__wrapper
			.product-item__slider.slider-prod
				.slider-prod__nav.js-slider-product-nav
					.slider-prod__nav-item
						img(src="img/visoptic.png", alt="Visoptic DUO Day")
					.slider-prod__nav-item
						img(src="img/visoptic_1.png", alt="Visoptic DUO Day")
					.slider-prod__nav-item
						img(src="img/visoptic_2.jpg", alt="Visoptic DUO Day")
				.slider-prod__for.js-slider-product-for
					.slider-prod__for-item
						img(src="img/visoptic.png", alt="Visoptic DUO Day")
					.slider-prod__for-item
						img(src="img/visoptic_1.png", alt="Visoptic DUO Day")
					.slider-prod__for-item
						img(src="img/visoptic_2.jpg", alt="Visoptic DUO Day")
			.product-item__info
				h2.product-item__name!=VISOPTIC_DAY.visoptic_day_title
				.product-item__rating
					.product-item__rating-stars
						img.product-item__rating-star(src="img/svg/star.svg", alt="")
						img.product-item__rating-star(src="img/svg/star.svg", alt="")
						img.product-item__rating-star(src="img/svg/star.svg", alt="")
						img.product-item__rating-star(src="img/svg/star.svg", alt="")
						img.product-item__rating-star(src="img/svg/star-empty-1.svg", alt="")
					p.product-item__rating-text!=VISOPTIC_DAY.visoptic_day_review_count
				ul.product-item__list.product-list
					li.product-list__item
						!=PRODUCT_CARD.product_niche
						!=VISOPTIC_DAY.visoptic_day_niche
					li.product-list__item
						!=PRODUCT_CARD.product_form_factor
						!=VISOPTIC_DAY.visoptic_day_form_factor
				a.product-item__btn.button.button--gold(href='order.html?id=visoptic')!=PRODUCT_CARD.product_btn
				p.product-item__text!=VISOPTIC_DAY.visoptic_day_short_description
				.product-item__description.js-accordeon
					.specification
						.specification__top.js-btn-accordeon
							h3.specification__ttl!=PRODUCT_CARD.product_description
							i.fico.fico-cross
						p.specification__text.js-info-accordeon!=VISOPTIC_DAY.visoptic_day_description
					.specification
						.specification__top.js-btn-accordeon
							h3.specification__ttl!=PRODUCT_CARD.product_compound
							i.fico.fico-cross
						p.specification__text.js-info-accordeon!=VISOPTIC_DAY.visoptic_day_compound
					.specification
						.specification__top.js-btn-accordeon
							h3.specification__ttl!=PRODUCT_CARD.product_usage
							i.fico.fico-cross
						p.specification__text.js-info-accordeon!=VISOPTIC_DAY.visoptic_day_usage
					.specification
						.specification__top.js-btn-accordeon
							h3.specification__ttl!=PRODUCT_CARD.product_contraindications
							i.fico.fico-cross
						p.specification__text.js-info-accordeon!=VISOPTIC_DAY.visoptic_day_contraindications
					.specification
						.specification__top.js-btn-accordeon
							h3.specification__ttl!=PRODUCT_CARD.product_additional
							i.fico.fico-cross
						.specification__text.js-info-accordeon
							.product-list
								li.product-list__item
									!=PRODUCT_CARD.product_manufacturer
									!=VISOPTIC_DAY.visoptic_day_manufacturer
								li.product-list__item.mb
									!=PRODUCT_CARD.product_suitability
									!=VISOPTIC_DAY.visoptic_day_suitability
								li.product-list__item
									!=PRODUCT_CARD.product_keep
									!=VISOPTIC_DAY.visoptic_day_keep
					.specification
						.specification__top.js-btn-accordeon
							h3.specification__ttl!=PRODUCT_CARD.product_reviews
							i.fico.fico-cross
						.specification__text.js-info-accordeon
							each review in REVIEWS
								+product-review(review)
		.product-item__recomm
			h2.product-item__recomm-ttl.title!= PRODUCT_CARD.product_recommendations
			.product-item__recomm-list
				each product in VISOPTIC_DAY_RECOMMENDATION
					+productShort(product)
