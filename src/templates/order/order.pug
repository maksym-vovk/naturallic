- var ORDERPAGEFORM = LANG.orderpageform;


section.order-block
    .container
        .order-block__wrapper
            .order-block__product-wrap
                img.order-block__product.js-product-photo(src='' alt='')
                p.order-block__name.js-product-name
            .order-block__form
                form.contacts-form.x_order_form#order-form(action="" method='post')
                    p.contacts-form__title!=ORDERPAGEFORM.orderpageform_title
                    .contacts-form__wrapper
                        .contacts-form__inputs
                            input.contacts-form__input(type="text" name="name" placeholder=`${ORDERPAGEFORM.orderpageform_name}` required)
                            input.contacts-form__input(type="text" name="phone" placeholder=`${ORDERPAGEFORM.orderpageform_tel}` required)
                            input.contacts-form__input(type="email" name="email" placeholder=`${ORDERPAGEFORM.orderpageform_email}` required)
                        .contacts-form__counter.counter
                            img.counter__photo.js-product-photo(src='' alt='')
                            p.counter__text!=ORDERPAGEFORM.orderpageform_count
                            .counter__block
                                .counter__block-arrow.js-counter-arrow-dec
                                    | <
                                .counter__num.js-counter-number 1
                                .counter__block-arrow.js-counter-arrow-inc
                                    | >

                        .contacts-form__promocode.promocode
                            input.promocode__input.js-input-promocode(type="text" name="promocode" placeholder="Vale" autocomplete="off")
                            button.promocode__btn.js-button-promocode(disabled) Aplicar

                        .contacts-form__price
                            .contacts-form__price-item.price-item
                                p.price-item__text Precio
                                p.price-item__value
                                    span.js-price-product
                                    span.js-currency!= CURRENCY
                            .contacts-form__price-item.price-item
                                p.price-item__text Cantidad
                                p.price-item__value.js-counter-number 1
                            .contacts-form__price-item.price-item
                                p.price-item__text Descuento
                                p.price-item__value
                                    span.js-sale-product 0
                                    span.js-currency!= CURRENCY
                            .contacts-form__price-item.price-item.price-item--main
                                p.price-item__text Suma
                                p.price-item__value
                                    span.js-price-order
                                    span.js-currency!= CURRENCY

                        button.contacts-form__btn.btn(type='submit')!=ORDERPAGEFORM.orderpageform_btn

                        input.js-data(type='hidden' name='niche' value='')
                        input.js-data(type='hidden' name='product' value='')
                        input.js-data(type='hidden' name='count' value='')
                        input.js-data(type='hidden' name='country' value='')

                        input(type='hidden' name='lang' value='')
                        input(type='hidden' name='campaign_id' value='')
                        input(type='hidden' name='es_list_id' value='')
                        input(type='hidden' name='chatbot_history' value='{}')
                        input(type='hidden' name='sid5' value='{subid}')
                        input(type='hidden' name='landing_id' value='')
                        input(type='hidden' name='country_code' value='')
                        input(type='hidden' name='redirect_url' value='')
                        input(type='hidden' name='location' value='')