mixin language-popup(page)
    .language.language--hidden
        .language__wrapper.container
            .language__main
                img.language__logo(src='img/svg/logo-w.svg' alt='')
                p.language__desc Select the language to be displayed on the site
                .select
                    .select__header
                        span.select__current Select languages
                    .select__body
                        a.select__option(data-lang='hu' href=url('hu', `/${page}.html`))
                            img.select__flag(src='img/language-hu.png' alt='hu')
                            span.select__country Hungary
                        a.select__option(data-lang='cz' href=url('cz', `/${page}.html`))
                            img.select__flag(src='img/language-cz.png' alt='cz')
                            span.select__country Czech
                        a.select__option(data-lang='ro' href=url('ro', `/${page}.html`))
                            img.select__flag(src='img/language-ro.png' alt='ro')
                            span.select__country Romania
                        a.select__option(data-lang='it' href=url('it', `/${page}.html`))
                            img.select__flag(src='img/language-it.png' alt='it')
                            span.select__country Italy