- var CALLBACKPOPUP = LANG.callbackpopup;

.popup.js-popup#popup
	.popup__wrap
		.popup__close.js-close
			i.fico.fico-cross
		.popup__content
			.popup__form
				p.popup__title!=CALLBACKPOPUP.callbackpopup_title
				form.form-popup(action="/", method="post")
					.form-popup__inputs
						input.form-popup__input(type="text" name="name" placeholder=CALLBACKPOPUP.callbackpopup_field_name)
						input.form-popup__input(type="phone" name="tel" placeholder=CALLBACKPOPUP.callbackpopup_field_phone)
						input.form-popup__input(type="text" name="comment" placeholder=CALLBACKPOPUP.callbackpopup_field_message)
					button.form-popup__btn.button.button--gold!=CALLBACKPOPUP.callbackpopup_btn